{
    "compilerOptions": {
        "target": "es6",
        "baseUrl": "./src",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@helpers/*": [
                "helpers/*"
            ],
            "@pages/*": [
                "pages/*"
            ],
            "@templates/*": [
                "templates/*"
            ],
            "@shared/*": [
                "shared/*"
            ],
            "@posts/*": [
                "posts/*"
            ],
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public",
        "dist",
        "build"
    ]
}